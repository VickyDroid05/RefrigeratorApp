<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/chevron_margin_size">

        <TextView
            android:id="@+id/tv_key"
            style="@style/TitleTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            tools:text="@string/app_name" />

        <View
            android:layout_width="@dimen/view_divider"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/view_divider_margin"
            android:layout_marginStart="@dimen/view_divider_margin"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_value"
            style="@style/TitleTextStyle.Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            tools:text="@string/app_name" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:hint="Enter value"
            android:inputType="numberDecimal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_chevron"
            android:layout_width="@dimen/chevron_img_size"
            android:layout_height="@dimen/chevron_img_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/chevron_margin_size"
            android:contentDescription="@null"
            android:src="@drawable/chevron" />
    </LinearLayout>
</layout>